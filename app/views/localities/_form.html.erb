<%= form_with(model: locality) do |form| %>
  <% if locality.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(locality.errors.count, "error") %> n'a pas permis de sauver cet examen :</h2>
      <ul>
        <% locality.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :ZIP, style: "display: block" %>
    <%= form.text_area :ZIP %>
  </div>
  <div>
    <%= form.label :locality, style: "display: block" %>
    <%= form.text_field :locality %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
