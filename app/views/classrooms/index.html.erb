<div class="container mx-auto flex flex-col max-w-7xl p-6 lg:px-8 min-h-screen">
  <% if notice.present? %>
    <div id="notice" class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 transition-opacity duration-500" role="alert">
      <%= notice %>
    </div>
  <% end %>
  <div class="flex justify-between w-full">
    <div>
      <h1 class="text-2xl font-bold">Classes</h1>
    </div>
    <div>
      <%= link_to "Nouvelle classe", new_classroom_path, class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  </div>
  <div class="my-4">
    <table class="w-full divide-y divide-gray-200 shadow-md">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Nom
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Année de début
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Année de début
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @classrooms.each do |classroom| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= classroom.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= classroom.promotion_start_date %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= classroom.promotion_end_date %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium flex flex-row justify-end">
              <%= link_to classroom_path(classroom), class: "inline-flex items-center justify-center text-black p-3 rounded transition duration-150 ease-in-out" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_classroom_path(classroom), class: "inline-flex items-center justify-center text-black p-3 rounded transition duration-150 ease-in-out" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= button_to classroom_path(classroom), method: :delete, data: { confirm: "Are you sure?" }, class: "inline-flex items-center justify-center p-3 rounded transition duration-150 ease-in-out" do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>