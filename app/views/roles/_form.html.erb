<%= form_with(model: role) do |form| %>
  <% if role.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(role.errors.count, "error") %> n'a pas permis de sauver ce role :</h2>
      <ul>
        <% role.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :role, style: "display: block" %>
    <%= form.text_area :role %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
